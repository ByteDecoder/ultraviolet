<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <Grid Name="LayoutRoot" Class="updown-component" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
  
    <TextBox Name="Input" Class="updown-input" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">{{Value}}</TextBox>

    <RepeatButton Name="UpButton" Class="updown-button updown-button-up" Focusable="false"
                  Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Increment"></RepeatButton>
    <RepeatButton Name="DownButton" Class="updown-button updown-button-down" Focusable="false"
                  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Decrement"></RepeatButton>

  </Grid>
</ComponentTemplate>