<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate HorizontalAlignment="Stretch">
  <Grid Class="listboxitem-component" 
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch">
    
    <Rectangle Class="listboxitem-highlight"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               IsHitTestVisible="false"
               Opacity="{{HighlightOpacity}}"/>
    <ContentPresenter Class="listboxitem-content"
                      Margin="{{Padding}}"/>
                      
  </Grid>
</ComponentTemplate>