<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate HorizontalAlignment="Stretch">
  <Canvas Class="listboxitem-component" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Rectangle Class="listboxitem-highlight" IsHitTestVisible="false" Opacity="{{HighlightOpacity}}"
      Canvas.Left="0"
      Canvas.Top="0"
      Canvas.Right="0"
      Canvas.Bottom ="0"/>
    <ContentPresenter Class="listboxitem-content"
      Canvas.Left="{{Padding.Left}}"
      Canvas.Top="{{Padding.Top}}"
      Canvas.Right="{{Padding.Right}}"
      Canvas.Bottom="{{Padding.Bottom}}"/>
  </Canvas>
</ComponentTemplate>