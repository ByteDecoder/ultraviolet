<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate HorizontalAlignment="Stretch">
  <Grid Class="combobox-dropdownitem-component" 
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch">
    
    <Rectangle Class="combobox-dropdownitem-highlight"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               IsHitTestVisible="false"
               Opacity="{{HighlightOpacity}}"/>
    <ContentPresenter Class="combobox-dropdownitem-content"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="{{Padding}}"/>
    
  </Grid>
</ComponentTemplate>