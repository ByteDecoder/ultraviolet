<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate LargeChange="10" SmallChange="1">
  <Grid ID="LayoutRoot" Class="scroll-component" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    
    <RepeatButton ID="LeftSmall" Class="scroll-button scroll-button-left" Grid.Column="0" VerticalAlignment="Stretch"
                  Click="HandleClickLeftSmall"></RepeatButton>

    <HScrollTrack ID="Track" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    
    <RepeatButton ID="RightSmall" Class="scroll-button scroll-button-right" Grid.Column="2" VerticalAlignment="Stretch"
                  Click="HandleClickRightSmall"></RepeatButton>    
    
  </Grid>
</ComponentTemplate>