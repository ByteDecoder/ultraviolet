<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <Grid ID="LayoutRoot" Class="scroll-component" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Image ID="Track" Class="scroll-track scroll-track-horizontal" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>

    <RepeatButton ID="LeftSmall" Class="scroll-button scroll-button-left" Grid.Column="0" VerticalAlignment="Stretch"
                  Click="HandleClickLeftSmall"></RepeatButton>
    <RepeatButton ID="LeftLarge" Class="scroll-repeat scroll-repeat-left" Grid.Column="1" Padding="0" Opacity="0" Width="0" Focusable="false"
                  VerticalAlignment="Stretch"
                  Click="HandleClickLeftLarge"></RepeatButton>

    <Button ID="Thumb" Class="scroll-thumb scroll-thumb-horizontal" Grid.Column="2" VerticalAlignment="Stretch"
            MouseButtonPressed="HandleThumbMouseButtonPressed" MouseMotion="HandleThumbMouseMotion"></Button>

    <RepeatButton ID="RightLarge" Class="scroll-repeat scroll-repeat-right" Grid.Column="3" Padding="0" Opacity="0" Focusable="false"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                  Click="HandleClickRightLarge"></RepeatButton>
    <RepeatButton ID="RightSmall" Class="scroll-button scroll-button-right" Grid.Column="4" VerticalAlignment="Stretch"
                  Click="HandleClickRightSmall"></RepeatButton>    
    
  </Grid>
</ComponentTemplate>