<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <Grid Class="radiobutton-component" IsHitTestVisible="false">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"></ColumnDefinition>
      <ColumnDefinition Width="Auto"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Image ID="ImgBox" Class="toggle-box" Grid.Column="0" VerticalAlignment="{{VerticalContentAlignment}}"></Image>
    <Image ID="ImgMark" Class="toggle-mark" Grid.Column="0" VerticalAlignment="{{VerticalContentAlignment}}" Visibility="{{MarkVisibility}}"></Image>
    <ContentPresenter Class="toggle-content" Grid.Column="1" VerticalAlignment="Stretch"></ContentPresenter>
  </Grid>
</ComponentTemplate>