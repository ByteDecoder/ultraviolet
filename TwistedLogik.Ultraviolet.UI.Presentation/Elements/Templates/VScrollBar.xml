<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate LargeChange="10" SmallChange="1">
  <Grid ID="LayoutRoot" Class="scroll-component" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <RepeatButton ID="UpSmall" Class="scroll-button scroll-button-up" Grid.Row="0" HorizontalAlignment="Stretch"
                  Click="HandleClickUpSmall"></RepeatButton>

    <VScrollTrack ID="Track" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    
    <RepeatButton ID="DownSmall" Class="scroll-button scroll-button-down" Grid.Row="2" HorizontalAlignment="Stretch"
                  Click="HandleClickDownSmall"></RepeatButton>    

  </Grid>
</ComponentTemplate>