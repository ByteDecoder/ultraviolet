<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <Grid ID="LayoutRoot" Class="scroll-component" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Image ID="Track" Class="scroll-track scroll-track-vertical" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>

    <RepeatButton ID="UpSmall" Class="scroll-button scroll-button-up" Grid.Row="0" HorizontalAlignment="Stretch"
                  Click="HandleClickUpSmall"></RepeatButton>
    <RepeatButton ID="UpLarge" Class="scroll-repeat scroll-repeat-up" Grid.Row="1" Opacity="0" Padding="0" Height="0" Focusable="false"
                  HorizontalAlignment="Stretch" 
                  Click="HandleClickUpLarge"></RepeatButton>

    <Button ID="Thumb" Class="scroll-thumb scroll-thumb-vertical" Grid.Row="2" HorizontalAlignment="Stretch"
            MouseButtonPressed="HandleThumbMouseButtonPressed" MouseMotion="HandleThumbMouseMotion"></Button>

    <RepeatButton ID="DownLarge" Class="scroll-repeat scroll-repeat-down" Grid.Row="3" Opacity="0" Padding="0" Focusable="false"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Click="HandleClickDownLarge"></RepeatButton>
    <RepeatButton ID="DownSmall" Class="scroll-button scroll-button-down" Grid.Row="4" HorizontalAlignment="Stretch"
                  Click="HandleClickDownSmall"></RepeatButton>    

  </Grid>
</ComponentTemplate>