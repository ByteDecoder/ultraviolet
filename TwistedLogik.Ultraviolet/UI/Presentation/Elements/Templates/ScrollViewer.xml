<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <ContentPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></ContentPanel>
    <VScrollBar ID="VScroll" Grid.Column="1" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                Value="{{VScrollValue}}" Maximum="{{VScrollMax}}" ViewportSize="{{ContentHeight}}"
                Visibility="{{VScrollVisibility}}" Enabled="{{VScrollEnabled}}" SmallChange="1" LargeChange="10"></VScrollBar>
    <HScrollBar ID="HScroll" Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Value="{{HScrollValue}}" Maximum="{{HScrollMax}}" ViewportSize="{{ContentWidth}}"
                Visibility="{{HScrollVisibility}}" Enabled="{{HScrollEnabled}}" SmallChange="1" LargeChange="10"></HScrollBar>
    <Pane ID="Corner" Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Pane>
  </Grid>
</ComponentTemplate>