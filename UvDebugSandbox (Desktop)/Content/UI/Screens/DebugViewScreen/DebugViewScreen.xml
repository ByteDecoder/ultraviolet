<?xml version="1.0" encoding="utf-8" ?>
<UIPanelDefinition>
  <View ViewModelType="UvDebugSandbox.UI.Screens.DebugViewModel, UvDebugSandbox">

    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="32"/>
    </Grid.RowDefinitions>
    
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Button Width="128" Height="128" Content="1"></Button>
      <Button Width="128" Height="128" Content="2">
        <Button.LayoutTransform>
          <TransformGroup>
            <RotateTransform Angle="{{Angle3}}" />              
          </TransformGroup>
        </Button.LayoutTransform>
        <Button.Effect>
          <DropShadowEffect/>
        </Button.Effect>
      </Button>
      <Button Width="128" Height="128" Content="3"/>
    </StackPanel>

    <HSlider Grid.Row="1" Width="200" Maximum="360" Value="{{Angle3}}"/>
        
  </View>
</UIPanelDefinition>