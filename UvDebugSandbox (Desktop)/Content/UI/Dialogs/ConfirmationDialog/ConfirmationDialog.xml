<?xml version="1.0" encoding="utf-8" ?>
<UIPanelDefinition
  DefaultOpenTransitionDuration="500.0"
  DefaultCloseTransitionDuration="500.0">
  <View Class="dialog" ViewModelType="UvDebugSandbox.UI.Dialogs.ConfirmationDialog+DialogScreenVM, UvDebugSandbox">

    <Rectangle Class="dialog-fade"/>
    <Grid Class="dialog-box" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Grid.Effect>
        <DropShadowEffect/>
      </Grid.Effect>

      <Image Class="dialog-box-background"/>
      <StackPanel Class="dialog-box-content">

        <TextBlock Class="dialog-header"
                   Text="{{Header}}"
                   HorizontalAlignment="Center"/>
        <TextBlock Class="dialog-text"
                   Text="{{Text}}"/>
        <StackPanel Class="btn-btn-panel" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">

          <Button Class="dialog-btn dialog-btn-ok" 
                  Content="OK"
                  IsDefault="true"
                  Click="HandleClickOK"/>
          <Button Class="dialog-btn dialog-btn-cancel" 
                  Content="Cancel"
                  IsCancel="true"
                  Click="HandleClickCancel"/>

        </StackPanel>

      </StackPanel>

    </Grid>

  </View>
</UIPanelDefinition>