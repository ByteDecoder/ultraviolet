<?xml version="1.0" encoding="utf-8" ?>
<UIPanelDefinition>
  <View ViewModelType="TwistedLogik.Ultraviolet.Tests.UI.Presentation.RenderTransformTestScreenViewModel, TwistedLogik.Ultraviolet.Tests">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
      <StackPanel.RenderTransform>
        <RotateTransform Angle="30"/>
      </StackPanel.RenderTransform>
      <Button>
        <Button.RenderTransform>
          <TransformGroup>
            <ScaleTransform ScaleX="1.5" ScaleY="2"/>
            <RotateTransform Angle="45"/>
          </TransformGroup>
        </Button.RenderTransform>
        Hello, world!
      </Button>
      <ComboBox Margin="0 50 0 0" SelectedIndex="1" IsDropDownOpen="true">
        <Button.RenderTransform>
          <RotateTransform Angle="-15"/>
        </Button.RenderTransform>
        <ComboBoxItem>Item 1</ComboBoxItem>
        <ComboBoxItem>Item 2</ComboBoxItem>
        <ComboBoxItem>Item 3</ComboBoxItem>
      </ComboBox>
    </StackPanel>
    
  </View>
</UIPanelDefinition>