<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Configurations>Debug;Release;Signed</Configurations>
    <AssemblyName>Ultraviolet.Core.TestFramework</AssemblyName>
    <RootNamespace>Ultraviolet.Core.TestFramework</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DocumentationFile>bin\Debug\netstandard2.1\Ultraviolet.Core.TestFramework.xml</DocumentationFile>
    <DelaySign>false</DelaySign>
    <DefineConstants>TRACE;NETSTANDARD;DEBUG</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DocumentationFile>bin\Release\netstandard2.1\Ultraviolet.Core.TestFramework.xml</DocumentationFile>
    <DelaySign>false</DelaySign>
    <DefineConstants>TRACE;NETSTANDARD</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Signed|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Optimize>true</Optimize>
    <DocumentationFile>bin\Signed\netstandard2.1\Ultraviolet.Core.TestFramework.xml</DocumentationFile>
    <DefineConstants>TRACE;NETSTANDARD;SIGNED</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\Version.cs" Link="Properties\Version.cs">
      <DependentUpon>Version.tt</DependentUpon>  
    </Compile>
    <Compile Include="..\Shared\Properties\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\Version.tt" Link="Properties\Version.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NUnit" Version="3.12.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Ultraviolet.Core\NETStandard21\Ultraviolet.Core.NETStandard21.csproj" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Signed'">
    <SignAssembly>true</SignAssembly>
    <DelaySign>true</DelaySign>
    <AssemblyOriginatorKeyFile>..\..\Ultraviolet.Public.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <Import Project="..\Shared\Ultraviolet.Core.TestFramework.projitems" Label="Shared" />

</Project>
