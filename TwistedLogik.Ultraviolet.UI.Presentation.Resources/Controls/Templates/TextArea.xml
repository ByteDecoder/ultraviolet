<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <View>
    <Grid Class="textarea-component"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

      <Image Class="textarea-background"
             SourceColor="{{Background}}"/>
      <ScrollViewer Class="textarea-scrollviewer"
                    ContentMargin="{{Padding}}"
                    ContentClipped="true"
                    HorizontalScrollBarVisibility="{{HorizontalScrollBarVisibility}}"
                    VerticalScrollBarVisibility="{{VerticalScrollBarVisibility}}">

        <TextAreaContentPresenter Name="PART_ContentPresenter"/>
      
      </ScrollViewer>
      <Image Class="textarea-focus-image"
             Opacity="{{IsKeyboardFocused ? 1 : 0}}"
             IsHitTestVisible="false"/>
      <Border Class="textarea-focus-border"
              Opacity="{{IsKeyboardFocused ? 1 : 0}}"
              IsHitTestVisible="false"/>

    </Grid>
  </View>
</ComponentTemplate>