<?xml version="1.0" encoding="utf-8" ?>
<ComponentTemplate>
  <View>
    <Grid Class="textbox-component"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

      <Image Class="textbox-background"
             SourceColor="{{Background}}"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"/>
      <TextBoxContentPresenter Name="PART_ContentPresenter"
                               Class="textbox-content"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               Margin="{{Padding}}"
                               Updating="PresenterUpdate"
                               Drawing="PresenterDraw"/>
      <Image Class="textbox-focus-image"
             Opacity="{{IsKeyboardFocused ? 1 : 0}}"
             IsHitTestVisible="false"/>
      <Border Class="textbox-focus-border"
              Opacity="{{IsKeyboardFocused ? 1 : 0}}"
              IsHitTestVisible="false"/>

    </Grid>
  </View>
</ComponentTemplate>