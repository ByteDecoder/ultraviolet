<?xml version="1.0" encoding="utf-8" ?>
<UIPanelDefinition>
  <Stylesheet>DebugViewScreenStyles.uvss</Stylesheet>
  <View ViewModelType="UvDebugSandbox.UI.Screens.DebugViewModel, UvDebugSandbox">

    <ToggleButton Checked="{{Enable}}">Enabled</ToggleButton>
    
    <Grid IsEnabled="{{Enable}}" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="8"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 0 8">Username:</TextBlock>
      <TextBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Margin="8 0 0 8">{{SomeValue}}</TextBox>

      <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 0 8">Password:</TextBlock>
      <NumericUpDown Minimum="10" Maximum="50" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" ValueChanged="HandleValueChanged" Margin="8 0 0 8"></NumericUpDown>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2" Grid.Row="2">
        <Button Margin="10 0 0 0" Width="150">Cancel</Button>
        <Button Margin="10 0 0 0" Width="150">Sign In</Button>
      </StackPanel>

      <TextBlock Grid.ColumnSpan="2" Grid.Row="4" HorizontalAlignment="Center">{{Username}}</TextBlock>

    </Grid>

  </View>
</UIPanelDefinition>