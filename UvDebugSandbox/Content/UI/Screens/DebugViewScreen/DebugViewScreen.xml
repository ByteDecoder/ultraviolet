<?xml version="1.0" encoding="utf-8" ?>
<UIPanelDefinition>
  <View ViewModelType="UvDebugSandbox.UI.Screens.DebugViewModel, UvDebugSandbox">

    <Image Source="#Global:Textures:DefaultUIBackground 0 0 1161 685" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
      <StackPanel.RenderTransform>
        <RotateTransform Angle="45"/>
      </StackPanel.RenderTransform>
      
      <ComboBox Width="200">
        <ComboBox.RenderTransform>
          <RotateTransform Angle="{{Angle}}"/>
        </ComboBox.RenderTransform>
        <ComboBoxItem>Item 1</ComboBoxItem>
        <ComboBoxItem>Item 2</ComboBoxItem>
        <ComboBoxItem>Item 3</ComboBoxItem>
      </ComboBox>
      <HSlider Margin="0 100 0 0" Width="200" Maximum="360">{{Angle}}</HSlider>

    </StackPanel>

  </View>
</UIPanelDefinition>