<?xml version="1.0" encoding="utf-8" ?>
<UIPanelDefinition>
  <View ViewModelType="UvDebugSandbox.UI.Screens.DebugViewModel, UvDebugSandbox">

    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="32"/>
    </Grid.RowDefinitions>
    
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Button Width="128" Height="128" Content="Button"></Button>
      <Button Width="128" Height="128" Content="Button">
        <Button.LayoutTransform>
          <TransformGroup>
            <RotateTransform Angle="{{Angle2}}" />              
          </TransformGroup>
        </Button.LayoutTransform>
      </Button>
      <Button Width="128" Height="128" Content="Button"/>
    </StackPanel>

    <HSlider Grid.Row="1" Width="200" Maximum="360" Value="{{Angle2}}"/>
        
  </View>
</UIPanelDefinition>