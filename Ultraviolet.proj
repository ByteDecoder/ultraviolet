    </CreateItem>
    <CreateItem Include="Ultraviolet.Presentation.RoslynCompiler_Desktop/bin/$(Configuration)/Ultraviolet.Presentation.RoslynCompiler.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Presentation_RoslynCompiler_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Tooling/bin/$(Configuration)/Ultraviolet.Tooling.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Tooling"/>
    </CreateItem>
    <CreateItem Include="UvFont/bin/$(Configuration)/uvfont.exe">
