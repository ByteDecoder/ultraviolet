<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0" DefaultTargets="BuildWindows;BuildLinux;BuildMacOS">
  <PropertyGroup Condition="'$(Configuration)' == ''">
    <Configuration>Debug</Configuration>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Platform)' == ''">
    <Platform>Any CPU</Platform>
  </PropertyGroup>
  <PropertyGroup>
    <IsMac>false</IsMac>
    <IsMac Condition="'$(OS)' == 'Unix' And Exists('/Library/Frameworks')">true</IsMac>
  </PropertyGroup>

  <ItemGroup>
    <Ultraviolet_Windows Include="Ultraviolet.Windows.sln">
      <Properties>Configuration=$(Configuration);Platform=$(Platform)</Properties>
    </Ultraviolet_Windows>
    <Ultraviolet_Linux Include="Ultraviolet.Linux.sln">
      <Properties>Configuration=$(Configuration);Platform=$(Platform)</Properties>
    </Ultraviolet_Linux>
    <Ultraviolet_MacOS Include="Ultraviolet.macOS.sln">
      <Properties>Configuration=$(Configuration);Platform=$(Platform)</Properties>
    </Ultraviolet_MacOS>
    <Ultraviolet_MacOS_Bamboo Include="Ultraviolet.MacOS.Bamboo.sln">
      <Properties>Configuration=$(Configuration);Platform=$(Platform)</Properties>
    </Ultraviolet_MacOS_Bamboo>
    <Ultraviolet_Android Include="Ultraviolet.Android.sln">
      <Properties>Configuration=$(Configuration);Platform=$(Platform)</Properties>
    </Ultraviolet_Android>
    <Ultraviolet_iOS_Bamboo Include="Ultraviolet.iOS.Bamboo.sln"/>
    <Ultraviolet_iOS Include="Ultraviolet.iOS.sln"/>
  </ItemGroup>
  
  <!-- VERSIONING -->
  <Target Name="CopyVersionFile">
    <Copy SourceFiles="Version.cs" DestinationFiles="Samples/Version.cs"/>
  </Target>
    
  <!-- DESKTOP -->	
  <Target Name="RepackArchives">
    <!-- TODO: Get this target working on non-Windows platforms -->
