    <Exec Condition="'$(OS)'=='Windows_NT'" 
      Command="&quot;Binaries/AnyCPU/$(Configuration)/uvarchive.exe&quot; -pack &quot;Samples/Sample15_RenderTargetsAndBuffers_Android/Content.uvarc&quot; &quot;Samples/Sample15_RenderTargetsAndBuffers_Desktop/Content&quot;"/>
    <Exec Condition="'$(OS)'=='Windows_NT'" 
      Command="&quot;Binaries/AnyCPU/$(Configuration)/uvarchive.exe&quot; -pack &quot;Samples/Sample16_CustomTextLayoutCommands_Android/Content.uvarc&quot; &quot;Samples/Sample16_CustomTextLayoutCommands_Desktop/Content&quot;"/>
  </Target>
  <Target Name="RestoreWindows">
    <Exec Condition="'$(OS)'=='Windows_NT'" 
      Command="&quot;Dependencies/nuget.exe&quot; restore &quot;@(Ultraviolet_Windows)&quot;"/>
    <Exec Condition="'$(OS)'=='Unix'" 
      Command="mono Dependencies/nuget.exe restore &quot;@(Ultraviolet_Windows)&quot;"/>
  </Target>
  <Target Name="RestoreLinux">
    <Exec Condition="'$(OS)'=='Windows_NT'" 
      Command="&quot;Dependencies/nuget.exe&quot; restore &quot;@(Ultraviolet_Linux)&quot;"/>
    <Exec Condition="'$(OS)'=='Unix'" 
      Command="mono Dependencies/nuget.exe restore &quot;@(Ultraviolet_Linux)&quot;"/>
  </Target>
  <Target Name="RestoreMacOS">
    <Exec Condition="'$(OS)'=='Windows_NT'" 
      Command="&quot;Dependencies/nuget.exe&quot; restore &quot;@(Ultraviolet_MacOS)&quot;"/>
    <Exec Condition="'$(OS)'=='Unix'" 
      Command="mono Dependencies/nuget.exe restore &quot;@(Ultraviolet_MacOS)&quot;"/>
  </Target>
  
  <Target Name="BuildWindows" Condition="'$(OS)' == 'Windows_NT'">
    <CallTarget Targets="RestoreWindows"/>
    <MSBuild Projects="@(Ultraviolet_Windows)"/>
    <CallTarget Targets="CopyWindowsBinaries"/>
    <CallTarget Targets="CopyDesktopBinaries"/>
  </Target>
  <Target Name="BuildLinux" Condition="'$(OS)' == 'Unix' And '$(IsMac)' == 'false' ">
    <CallTarget Targets="RestoreLinux"/>
    <MSBuild Projects="@(Ultraviolet_Linux)"/>
    <CallTarget Targets="CopyDesktopBinaries"/>
  </Target>
  <Target Name="BuildMacOS" Condition="'$(OS)' == 'Unix' And '$(IsMac)' == 'true' ">
    <CallTarget Targets="RestoreMacOS"/>
    <MSBuild Projects="@(Ultraviolet_MacOS)"/>
    <CallTarget Targets="CopyMacOSBinaries"/>
    <CallTarget Targets="CopyDesktopBinaries"/>
  </Target>
  <Target Name="BuildMacOSBamboo" Condition="'$(OS)' == 'Unix' And '$(IsMac)' == 'true' ">
    <CallTarget Targets="RestoreMacOS"/>
    <MSBuild Projects="@(Ultraviolet_MacOS_Bamboo)"/>
    <CallTarget Targets="CopyMacOSBinaries"/>
    <CallTarget Targets="CopyDesktopBinaries"/>
  </Target>
      
  <Target Name="CopyDesktopBinaries">
      <CreateItem Include="packages/Newtonsoft.Json.9.0.1/lib/net40/*.*">
        <Output TaskParameter="Include" ItemName="Newtonsoft_Json_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Core/Desktop/bin/$(Configuration)/Ultraviolet.Core.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Core_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.OpenGL.Bindings/Desktop/bin/$(Configuration)/Ultraviolet.OpenGL.Bindings.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_OpenGL_Bindings_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet_Desktop/bin/$(Configuration)/Ultraviolet.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Profiler.dotTrace_Desktop/bin/$(Configuration)/Ultraviolet.Profiler.dotTrace.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Profiler_dotTrace_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Shims.Desktop/bin/$(Configuration)/Ultraviolet.Shims.Desktop.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Shims_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.BASS/Desktop/bin/$(Configuration)/Ultraviolet.BASS.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_BASS_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.OpenGL/Desktop/bin/$(Configuration)/Ultraviolet.OpenGL.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_OpenGL_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.SDL2_Desktop/bin/$(Configuration)/Ultraviolet.SDL2.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_SDL2_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Presentation_Desktop/bin/$(Configuration)/Ultraviolet.Presentation.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Presentation_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Presentation_Desktop/bin/$(Configuration)/Ultraviolet.Presentation.Uvss.*">
        <Output TaskParameter="Include" ItemName="Ultraviolet_Presentation_Uvss_Desktop"/>
    </CreateItem>
    <CreateItem Include="Ultraviolet.Presentation.Compiler_Desktop/bin/$(Configuration)/Ultraviolet.Presentation.Compiler.*">
