    <Exec Condition="'$(OS)'=='Windows_NT'" 
      Command="&quot;Binaries/AnyCPU/$(Configuration)/uvarchive.exe&quot; -pack &quot;Samples/Sample10_AsynchronousContentLoading_Android/Content.uvarc&quot; &quot;Samples/Sample10_AsynchronousContentLoading_Desktop/Content&quot;"/>
    <Exec Condition="'$(OS)'=='Windows_NT'" 
