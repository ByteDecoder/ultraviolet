    <CallTarget Targets="RestoreiOS"/>
    <MSBuild Projects="@(Ultraviolet_iOS)" Properties="Configuration=$(Configuration);Platform=$(Platform)"/>
    <CallTarget Targets="CopyiOSBinaries"/>
  </Target>
